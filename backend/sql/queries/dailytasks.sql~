
-- name: AddTask :one
  INSERT INTO tasks(id, title, description, date_start, repetitions, user_id)
  VALUES($1, $2, $3, $4, $5, $6)
  RETURNING *;

-- name: GetTasksByUserId :many
  SELECT * FROM tasks WHERE user_id = $1;

-- name: UpdateTask :many
  UPDATE tasks
  SET title = $2,
      descriptions = $3,
      event_start = $4,
      event_end = $5,
      repetitions = $6,
      user_id = $7
  WHERE id = $1

-- name: DeleteTask :exec
  DELETE * FROM tasks WHERE id = $1;
